using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Channels;
using System.Threading.Tasks;

namespace menumenu
{
    class menumetodos
    {
        public void cerrar()
        {
            bool d = false;
            Console.WriteLine("ingrese un si o no, si quiere salir del programa");
            String V = Console.ReadLine();
            if (V == "si" || V == "SI")
            {
                d = false;
            }
            else if (V == "no" || V == "NO")
            {
                d = true;
            }


            if (d == true)
            {
                Console.WriteLine("sigamos con el programa");
                Console.ReadLine();
                Console.Clear();
                return ;
            }
            else if (d == false)
            {
                Console.WriteLine("cerrando programa...");
                Console.ReadLine();
                Environment.Exit(0);
                return ;
            }
        }
        public void Saludar()
        {
            Console.Write("Ingrese su nombre: ");
            string nombre = Console.ReadLine();
            Console.WriteLine("Â¡Hola, " + nombre +"!");
            Console.ReadLine();
        }
        public void Fecha()
        {
            DateTime fechaActual = DateTime.Now.Date;
            Console.WriteLine("La fecha de hoy es: " + fechaActual.ToShortDateString());
            Console.ReadLine();

        }
        static void Main(string[] args)
        {
            menumetodos m = new menumetodos();
            bool inf = false;
            String menu = "";
            while (inf == false)
            {
                Console.WriteLine("ingrese cualquier opcion: .1 Saludar .2 Fecha .3 cerrar");
                menu = Console.ReadLine();
                switch (menu)
                {
                    case "1":

                        m.Saludar();
                        Console.Clear();

                        break;
                    case "2":
                        m.Fecha();
                        Console.Clear();

                        break;
                    case "3":


                        m.cerrar();
                        Console.Clear();
                        break;

                }
            }
        }
    }
}
